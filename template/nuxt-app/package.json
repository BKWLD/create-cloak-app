	"license": "UNLICENSED",
	"private": true,
	"scripts": {
		"dev": "nuxt",
		"build": "nuxt build",
		"start": "nuxt start",
		"generate": "nuxt generate --fail-on-error --target=static"
	},
	"dependencies": {
		"@bkwld/light-or-dark": "^1.0.1",
		"@cloak-app/boilerplate": "^1.0.10",
