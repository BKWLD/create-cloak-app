/**
 * Vars
 */

// Breakpoints
json('vars/breakpoints.json')

// Dimensions
json('vars/dimensions.json')

// Whitespace
gutter = 60px
gutter-mobile = 20px
max-w-small = 750px + gutter * 2
max-w-medium = 1060px + gutter * 2
max-w = 1280px + gutter * 2
max-w-wide = 1440px
max-w-full = 2560px

// Header config
header-z = 10

// Colors
offwhite = #edf0f5
primary-color = #009c4b
primary-color-dark = darken(primary-color, 10%) // For hovers

// Button sizing
btn-desktop-h = 40px
btn-mobile-h = 36px
btn-small-h = 30px
btn-pad-h = 30
btn-pad-h-min = 30
btn-pad-h-small = 20

// Typography
body-font-size = 16px
body-font-size-min = 14px
body-line-height = 1.3

// Spacing
spacing-xl = 120
spacing-xl-min = spacing-xl * 0.5
spacing-l = 90
spacing-l-min = spacing-l * 0.6
spacing-m = 45
spacing-m-min = spacing-m * 0.7
spacing-s = 30
spacing-s-min = spacing-s * 0.8
spacing-xs = 15
spacing-xs-min = spacing-xs * 0.9

/**
 * Vendor
 */

// The Bukwild shared stylus library
support-for-ie = false // Don't generate px values with rem function
body-font-size = 16px
@import '~bukwild-stylus-library'

/**
 * Functions
 */

// Set font styles shorthand
fluid-font(style,
	max-size = null,
	min-size = null,
	color = null,
	max-break = null,
	min-break = 375)

	// Font style switch statement.
	if style == 'body'
		font-family sans-serif
		letter-spacing -0.01em
		font-weight 400

	// Set font-size
	fluid font-size, max-size, min-size, max-break, min-break

	// Set color, if provided
	if color
		color color

// Style guide styles. The line-height fractions are based on the brand
// style guidelines
style-h1()
	fluid-font 'body', 72, 50
	line-height (140/150)
style-h2()
	fluid-font 'body', 48, 30
	line-height (100/100)
style-h3()
	fluid-font 'body', 30, 24
	line-height (54/50)
style-h4()
	fluid-font 'body', 22, 20
	line-height body-line-height
style-h5()
	fluid-font 'body', 18, 16
	line-height body-line-height
style-body()
	fluid-font 'body', body-font-size, body-font-size-min
	line-height body-line-height

// Shorthand for making fluid spacing
fluid-space(property, size, negative = false)
	mod = negative ? -1 : 1
	fluid property,
		mod * lookup('spacing-'+size),
		mod * lookup('spacing-'+size+'-min')
